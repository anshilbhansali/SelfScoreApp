<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/colorWhite"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Earn "
            android:textColor="@color/navy100"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$30 "
            android:textColor="@color/navy100"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="each for you &amp; approved friends"
            android:textColor="@color/navy100"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="40dp"
        android:layout_gravity="left">

        <include layout="@layout/text_bubble_green"></include>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="@dimen/person_icon_width"
            android:layout_height="@dimen/person_icon_height"
            android:background="@drawable/person_green"
            android:textColor="#ffffff"
            android:shadowColor="#31fe03"
            android:layout_marginLeft="3dp"/>
        <TextView
            android:layout_width="@dimen/person_icon_width"
            android:layout_height="@dimen/person_icon_height"
            android:background="@drawable/person_green"
            android:layout_marginLeft="1dp"/>
        <TextView
            android:layout_width="@dimen/person_icon_width"
            android:layout_height="@dimen/person_icon_height"
            android:background="@drawable/person_grey"
            android:layout_marginLeft="1dp"/>
        <TextView
            android:layout_width="@dimen/person_icon_width"
            android:layout_height="@dimen/person_icon_height"
            android:background="@drawable/person_grey"
            android:layout_marginLeft="1dp"/>
        <TextView
            android:layout_width="@dimen/person_icon_width"
            android:layout_height="@dimen/person_icon_height"
            android:background="@drawable/person_grey"
            android:layout_marginLeft="1dp"/>
        <TextView
            android:layout_width="@dimen/person_icon_width"
            android:layout_height="@dimen/person_icon_height"
            android:background="@drawable/person_grey"
            android:layout_marginLeft="1dp"/>
        <TextView
            android:layout_width="@dimen/person_icon_width"
            android:layout_height="@dimen/person_icon_height"
            android:background="@drawable/person_grey"
            android:layout_marginLeft="1dp"/>
        <TextView
            android:layout_width="@dimen/person_icon_width"
            android:layout_height="@dimen/person_icon_height"
            android:background="@drawable/person_grey"
            android:layout_marginLeft="1dp"/>
        <TextView
            android:layout_width="@dimen/person_icon_width"
            android:layout_height="@dimen/person_icon_height"
            android:background="@drawable/person_grey"
            android:layout_marginLeft="1dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="5dp"
            android:background="@color/navy30"
            android:layout_marginBottom="0dp"
            android:paddingBottom="0dp">
            <TextView
                android:layout_width="@dimen/person_icon_width"
                android:layout_height="@dimen/person_icon_height"
                android:background="@drawable/person_grey"
                android:layout_margin="1dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+$200"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bonus"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"/>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>