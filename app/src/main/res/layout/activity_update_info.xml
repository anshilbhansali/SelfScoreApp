<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy10">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/navy100"
        android:elevation="5dp"
        android:id="@+id/_toolbar">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="0dp"
            android:paddingRight="0dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/back_button"
                android:layout_marginRight="0dp"
                android:paddingRight="0dp"
                android:padding="6dp"
                android:id="@+id/back_button"
                android:layout_gravity="left"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="Update Info"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="65dp"
                android:gravity="center"
                android:id="@+id/header_card"

                />

            <!-- empty view -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingTop="7dp"
                android:paddingBottom="13dp"
                android:src="@drawable/sslogo_final"
                android:layout_marginTop="0dp"
                android:id="@+id/home_button"/>



        </LinearLayout>


    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:src="@drawable/userpicture"
                    android:id="@+id/user_photo"
                    android:layout_weight="2"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/uploadphoto"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/upload_photobutton"
                    android:layout_weight="1"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHONE"
                android:textSize="18sp"
                android:textColor="@color/midnight"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="7dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="0dp">

                <EditText
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:text="555"
                    android:textColor="@color/midnight"
                    android:gravity="center"
                    android:background="@color/colorWhite"
                    android:textStyle="bold"
                    android:id="@+id/phone_pt1"/>
                <EditText
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:text="123"
                    android:textColor="@color/midnight"
                    android:gravity="center"
                    android:background="@color/colorWhite"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:id="@+id/phone_pt2"/>
                <EditText
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:text="4567"
                    android:textColor="@color/midnight"
                    android:gravity="center"
                    android:background="@color/colorWhite"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:id="@+id/phone_pt3"/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL ADDRESS"
                android:textSize="18sp"
                android:textColor="@color/midnight"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="guysmiley@email.com"
                android:layout_marginLeft="0dp"
                android:paddingLeft="20dp"
                android:textColor="@color/midnight"
                android:background="@color/colorWhite"
                android:textStyle="bold"
                android:id="@+id/email_view"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STREET ADDRESS 1"
                android:textSize="18sp"
                android:textColor="@color/midnight"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="123 Happytown Road"
                android:layout_marginLeft="0dp"
                android:paddingLeft="20dp"
                android:textColor="@color/midnight"
                android:background="@color/colorWhite"
                android:textStyle="bold"
                android:id="@+id/sa1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STREET ADDRESS 2 (optional)"
                android:textSize="18sp"
                android:textColor="@color/midnight"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Apartment 777"
                android:layout_marginLeft="0dp"
                android:paddingLeft="20dp"
                android:textColor="@color/midnight"
                android:background="@color/colorWhite"
                android:textStyle="bold"
                android:id="@+id/sa2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CITY"
                android:textSize="18sp"
                android:textColor="@color/midnight"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Happytown, ME 12345"
                android:layout_marginLeft="0dp"
                android:paddingLeft="20dp"
                android:textColor="@color/midnight"
                android:background="@color/colorWhite"
                android:textStyle="bold"
                android:id="@+id/city_view"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GRADUATE SCHOOL"
                android:textSize="18sp"
                android:textColor="@color/midnight"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Stanford University"
                android:layout_marginLeft="0dp"
                android:paddingLeft="20dp"
                android:textColor="@color/midnight"
                android:background="@color/colorWhite"
                android:textStyle="bold"
                android:id="@+id/grad_schoo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GRADUATE FIELD OF STUDY"
                android:textSize="18sp"
                android:textColor="@color/midnight"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="PhD Computer Science"
                android:layout_marginLeft="0dp"
                android:paddingLeft="20dp"
                android:textColor="@color/midnight"
                android:background="@color/colorWhite"
                android:textStyle="bold"
                android:id="@+id/grad_fos_v"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UNDERGRADUATE SCHOOL"
                android:textSize="18sp"
                android:textColor="@color/midnight"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="UC Berkely"
                android:layout_marginLeft="0dp"
                android:paddingLeft="20dp"
                android:textColor="@color/midnight"
                android:background="@color/colorWhite"
                android:textStyle="bold"
                android:id="@+id/ugrad_schoo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UNDERGRADUATE FIELD OF STUDY"
                android:textSize="18sp"
                android:textColor="@color/midnight"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="BS Computer Science"
                android:layout_marginLeft="0dp"
                android:paddingLeft="20dp"
                android:textColor="@color/midnight"
                android:background="@color/colorWhite"
                android:textStyle="bold"
                android:id="@+id/ugrad_fos_v"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="30dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mybutton_yellow"
                    android:text="Save changes"
                    android:textColor="@color/colorWhite"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:id="@+id/sav_changes_button"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mybutton_grey"
                    android:text="Cancel"
                    android:textColor="@color/colorWhite"
                    android:layout_weight="1"
                    android:id="@+id/cancel_button"/>

            </LinearLayout>





        </LinearLayout>

    </ScrollView>





</LinearLayout>