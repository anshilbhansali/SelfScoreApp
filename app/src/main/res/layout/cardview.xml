<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:gravity="center">

    <!-- A CardView  -->
    <android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="265dp"
    card_view:cardCornerRadius="4dp"

        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <!-- To center it^^  -->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/header_click">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/navy100" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/header_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Header"
                        android:layout_marginLeft="15dp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="5dp"/>

                    <!-- empty view -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />

                    <!-- arrow button -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â–¼"
                        android:textSize="20sp"
                        android:rotation="-90"
                        android:layout_marginRight="5dp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="right"/>

                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:layout_gravity="center"
                android:id="@+id/subheader_layout">

                <TextView
                    android:id="@+id/subheader_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/navy100"
                    android:text="$15"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subheader_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/navy100"
                    android:text="Subheading"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    />


            </LinearLayout>


            <!--content-->>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="5dp"
                android:id="@+id/content_cardview">



            </LinearLayout>

            <!-- empty view -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />



            <Button
                android:id="@+id/button_text"
                android:layout_width="210dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:text="BUTTON"
                android:textColor="@color/navy100"
                android:background="@drawable/mybutton"
                android:shadowColor="#dfdfdf"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="15dp"

                />





        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>