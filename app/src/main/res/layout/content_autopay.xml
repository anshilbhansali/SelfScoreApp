<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy20"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/min_pay_view"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/min_pay_text1"
            android:text="Minimum payment amount"
            android:textColor="@color/midnight"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/min_pay_text2"
            android:text="As reflected on your monthly statement"
            android:textColor="@color/midnight"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/monthly_state_bal_view"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/monthly_state_bal_text1"
            android:text="Monthly statement balance"
            android:textColor="@color/midnight"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/monthly_state_bal_text2"
            android:text="As reflected on your monthly statement"
            android:textColor="@color/midnight"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/autopay_pt1"
        android:textColor="@color/midnight"
        android:layout_marginLeft="20dp"
        android:textSize="12sp"
        android:layout_marginTop="10dp"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment method"
        android:textColor="@color/midnight"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="(Select form of payment)"
        android:background="@color/colorWhite"
        android:layout_marginTop="7dp"
        android:paddingTop="10dp"
        android:paddingRight="0dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/payment_method2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payments will post on your due date, the"
        android:textColor="@color/midnight"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17th of each month."
        android:textColor="@color/midnight"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"/>


</LinearLayout>