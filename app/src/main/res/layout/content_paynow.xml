<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy20"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/min_due_view"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/min_due_text"
            android:text="Minimum due"
            android:layout_marginLeft="10dp"
            android:textColor="@color/midnight"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/min_due_num"
            android:text="$0"
            android:textSize="19sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/midnight"
            android:textStyle="bold"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prev_bal_view"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prev_bal_text"
            android:text="Previous balance"
            android:layout_marginLeft="10dp"
            android:textColor="@color/midnight"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prev_bal_num"
            android:text="$0"
            android:textSize="19sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/midnight"
            android:textStyle="bold"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/curr_bal_view"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/curr_bal_text"
            android:text="Current balance"
            android:layout_marginLeft="10dp"
            android:textColor="@color/midnight"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/curr_bal_num"
            android:text="$159.9"
            android:textSize="19sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/midnight"
            android:textStyle="bold"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/other_amt_view"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/other_amt_text"
            android:text="Other Amount"
            android:layout_marginLeft="10dp"
            android:textColor="@color/midnight"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/other_amt_num"
            android:text="$..."
            android:layout_marginRight="10dp"
            android:textColor="@color/midnight"
            android:textSize="19sp"
            android:textStyle="bold"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment method"
        android:textColor="@color/midnight"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="(Select form of payment)"
        android:background="@color/colorWhite"
        android:layout_marginTop="7dp"
        android:paddingTop="10dp"
        android:paddingRight="0dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/select_pay_method"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment date (within 30 days)"
        android:textColor="@color/midnight"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CalendarView
            android:layout_width="330dp"
            android:layout_height="300dp"
            android:visibility="gone"
            android:minHeight="200dp"
            android:minWidth="200dp"
            android:id="@+id/calendar_view">


        </CalendarView>

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="10/27/2015"
            android:textStyle="bold"
            android:textColor="@color/midnight"
            android:background="@color/colorWhite"
            android:layout_marginTop="7dp"
            android:paddingTop="10dp"
            android:paddingRight="0dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/datepicker"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your payment is due "
            android:textSize="12sp"
            android:textColor="@color/midnight"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oct 31 "
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginLeft="0dp"
            android:textColor="@color/midnight"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="12sp"
        android:text="Payments received after 2:30PM CST will not post until the next business day."
        android:textColor="@color/midnight"/>


</LinearLayout>