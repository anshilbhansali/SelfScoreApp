<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/card_toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15$"
            android:textSize="25sp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="90dp"
            android:textStyle="bold"
            android:textColor="@color/midnight" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" payment due in"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:textColor="@color/midnight"
            android:layout_marginBottom="0dp"/>

    </LinearLayout>



    <!--placeholder view, will change later-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="5dp">

        <include layout="@layout/paybill_content"></include>

    </LinearLayout>


    <!--MINIMUM DUE-->
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum Due"
            android:layout_marginLeft="50dp"
            android:textColor="@color/midnight" />

        <!-- empty view -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15$"
            android:layout_gravity="right"
            android:textColor="@color/midnight"
            android:textStyle="bold" />

    </LinearLayout>

    <!--LAST STATEMTN BALANCE-->
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last statement balance"
            android:layout_marginLeft="50dp"
            android:textColor="@color/midnight" />

        <!-- empty view -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="350$"
            android:layout_gravity="right"
            android:textColor="@color/midnight"
            android:textStyle="bold" />

    </LinearLayout>

    <!--CURR BAL-->
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current balance"
            android:layout_marginLeft="50dp"
            android:textColor="@color/midnight" />

        <!-- empty view -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="400$"
            android:layout_gravity="right"
            android:textColor="@color/midnight"
            android:textStyle="bold" />

    </LinearLayout>

    <!--AVAIL CRED-->
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available credit"
            android:layout_marginLeft="50dp"
            android:textColor="@color/midnight" />

        <!-- empty view -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100$"
            android:layout_gravity="right"
            android:textColor="@color/midnight"
            android:textStyle="bold" />

    </LinearLayout>

    <!--CRED LIMIT-->
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit Limit"
            android:layout_marginLeft="50dp"
            android:textColor="@color/midnight" />

        <!-- empty view -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500$"
            android:layout_gravity="right"
            android:textColor="@color/midnight"
            android:textStyle="bold" />

    </LinearLayout>

    <!--INCR CRED LIM-->
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <!-- empty view -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Increase Credit limit"
            android:layout_marginLeft="50dp"
            android:layout_gravity="right"
            android:textColor="#feb200" />


    </LinearLayout>

    <!-- BUTTONS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/navy100"
            android:layout_marginRight="3dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/paynow"
                android:adjustViewBounds="true"
                android:background="@color/navy100"

                />
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Pay Now"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/navy100">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/autopay"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Set up autopay"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View all payments"
            android:layout_gravity="center"
            android:layout_marginLeft="130dp"
            android:textColor="#feb200" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â–¼"
            android:rotation="-90"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:textColor="#feb200" />


    </LinearLayout>

    

</LinearLayout>