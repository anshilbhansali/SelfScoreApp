<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy10"
    android:orientation="vertical"
    tools:context="com.selfscore.selfscoreapp.Activities.DashboardActivities.EarnCashActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/navy100"
        android:elevation="5dp"
        android:id="@+id/_toolbar">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="0dp"
            android:paddingRight="0dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/back_button"
                android:layout_marginRight="0dp"
                android:paddingRight="0dp"
                android:padding="6dp"
                android:id="@+id/back_button"
                android:layout_gravity="left"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="Invite Friends"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="63dp"
                android:gravity="center"
                android:id="@+id/header_card"

                />

            <!-- empty view -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingTop="7dp"
                android:paddingBottom="13dp"
                android:src="@drawable/sslogo_final"
                android:layout_marginTop="0dp"
                android:id="@+id/home_button"/>



        </LinearLayout>


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite "
            android:textColor="@color/midnight"
            android:textSize="19sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="another "
            android:textColor="@color/midnight"
            android:textSize="19sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="friend and earn "
            android:textColor="@color/midnight"
            android:textSize="19sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cash"
            android:textColor="@color/midnight"
            android:textSize="19sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round_corners_white"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:hint="Friend's name"
        android:singleLine="true"
        android:textColorHint="@color/navy20"
        android:textSize="16sp"
        android:paddingLeft="20dp"
        android:id="@+id/friends_name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round_corners_white"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:hint="Friend's email address"
        android:textColorHint="@color/navy20"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="16sp"
        android:paddingLeft="20dp"
        android:layout_marginTop="5dp"
        android:id="@+id/friends_email"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton_yellow"
        android:layout_gravity="center"
        android:text="SEND INVITATION"
        android:textColor="@color/colorWhite"
        android:maxLines="1"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/send_inv_button"
        />


</LinearLayout>
